package com.practise.SA;

public class Demo11 {
	public static void main(String[] args) {
		String s = "java is easy";
		String s1 = "";
		int count = 0;
		int i = 0;
		int len = s.length();
		char[] c = s.toCharArray();
		while (len > i) {
			while (len < i && c[i] != ' ') {
				i++;
			}
			System.out.println(c[i] + " " + i);
		}
	}
}
